		System.out.println("6.종료");
		System.out.print(">> menu >");
		
	}
	@Override
	public void createLotto(Scanner scan) {
		// 로또 수동입력 메뉴
		System.out.println("로또번호 입력.(중복x, 1~45범위, 숫자6자리");
		int[] tmp = new int[6];	//입력받을 임시배열 변수
		for(int i=0; i<tmp.length; i++) {
			tmp[i] = scan.nextInt();
		}
		//중복 체크 후
	}

